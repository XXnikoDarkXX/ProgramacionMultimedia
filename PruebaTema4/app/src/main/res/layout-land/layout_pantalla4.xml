<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulUltramar"
    >

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="343dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/opcion1" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="323dp"
            android:layout_height="43dp"
            android:text="@string/opcion2" />
    </RadioGroup>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/opciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

    <TextView
        android:id="@+id/abajo"
        android:layout_width="82dp"
        android:layout_height="14dp"
        android:layout_marginBottom="4dp"
        android:text="@string/arriba"
        app:layout_constraintBottom_toTopOf="@+id/arriba"
        app:layout_constraintEnd_toStartOf="@+id/botonLlamar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <EditText
        android:id="@+id/arriba"
        android:layout_width="116dp"
        android:layout_height="17dp"
        android:layout_marginBottom="140dp"
        android:hint="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/botonLlamar"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnArriba"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pasarTexto"
        android:text="@string/pulsame"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="325dp" />

    <Button
        android:id="@+id/botonLlamar"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/iconollamada"
        android:onClick="hacerLlamada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>